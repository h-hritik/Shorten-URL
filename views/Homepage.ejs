<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">URL Shortener</h1>
        
        <% if (locals.id) { %>
            <div class="alert alert-success">
                URL Generated: <a href="http://localhost:8000/url<%= id %>" target="_blank">http://localhost:8000/url/<%= id %></a>
            </div>
        <% } %>
        
        <form id="urlForm" method="post" action="/url" class="mb-4">
            <div class="form-group">
                <label for="url">Enter URL to shorten:</label>
                <input type="url" id="url" name="url" class="form-control" placeholder="http://www.example.com" required>
            </div>
            <button type="submit" class="btn btn-primary">Shorten</button>
        </form>
      
        <div>
            <% if (locals.urls) { %>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>S.No</th>
                            <th>ShortID</th>
                            <th>Redirect</th>
                            <th>Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= url.shortId %></td>
                                <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
                                <td><%= url.visitHistory.length %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
        
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
